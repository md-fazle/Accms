@model List<ACCMS_AGH.Models.Accms.ChequeRegisterDetailsModel>

@{
    ViewData["Title"] = "Cheque Allotment List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Cheque Allotment Dashboard">
    <meta name="author" content="">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
     <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <main role="main" class="container-fluid py-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 fw-bold text-dark">Cheque Allotment</h1>
            <div class="btn-toolbar">
                <div class="btn-group me-2">
                    <button class="btn btn-outline-primary btn-sm btn-custom" data-bs-toggle="tooltip" title="Share this page">
                        <i class="fas fa-share-alt"></i> Share
                    </button>
                    <button class="btn btn-outline-success btn-sm btn-custom" data-bs-toggle="tooltip" title="Export data">
                        <i class="fas fa-file-export"></i> Export
                    </button>
                </div>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm btn-custom dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-calendar"></i> This Week
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Today</a></li>
                        <li><a class="dropdown-item" href="#">This Week</a></li>
                        <li><a class="dropdown-item" href="#">This Month</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Navbar Section -->
        <section class="navbar navbar-dark navbar-custom mb-4">
            <div class="container-fluid px-4 py-3">
                <!-- First Row -->
                <div class="row w-100 align-items-end g-3">
                    <div class="col-md-2 col-sm-12 text-md-start text-center">
                        <h4 class="mb-0">CODE</h4>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <input class="form-control" type="text" id="searchInput1" placeholder="Search by Name or Ledger Code" aria-label="Search by Name or Ledger Code">
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <form class="row g-3">
                            <div class="col-md-6">
                                <label for="nameInput" class="form-label text-white small">Name</label>
                                <select class="form-select" id="nameInput" aria-label="Select Name">
                                    <option value="">Select Name</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="ledgerCodeInput" class="form-label text-white small">Ledger Code</label>
                                <input type="text" class="form-control" id="ledgerCodeInput" placeholder="Ledger Code" aria-label="Ledger Code">
                            </div>
                        </form>
                    </div>
                </div>

                <hr class="text-white my-3">

                <!-- Second Row -->
                <div class="row w-100 align-items-end g-3">
                    <div class="col-md-2 col-sm-12 text-md-start text-center">
                        <h4 class="mb-0">CHEQUE NO</h4>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <input class="form-control" type="text" id="searchInput2" placeholder="Search by Bank Name or Amount" aria-label="Search by Bank Name or Amount">
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <form class="row g-3">
                            <div class="col-md-6">
                                <label for="bankNameInput" class="form-label text-white small">Bank Name</label>
                                <select class="form-select" id="bankNameInput" aria-label="Select Bank">
                                    <option value="">Select Bank</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="amountInput" class="form-label text-white small">Amount</label>
                                <input type="text" class="form-control" id="amountInput" placeholder="Amount" aria-label="Amount">
                            </div>
                        </form>
                    </div>
                </div>

                <hr class="text-white my-3">

                <!-- Button Row -->
                <div class="row justify-content-center mt-3">
                    <div class="col-auto">
                        <button type="button" class="btn btn-primary btn-custom" data-bs-toggle="tooltip" title="Save changes">
                            <i class="fas fa-save"></i> Save
                        </button>
                    </div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-secondary btn-custom" data-bs-toggle="tooltip" title="Refresh the page">
                            <i class="fas fa-sync"></i> Refresh
                        </button>
                    </div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-success btn-custom" data-bs-toggle="tooltip" title="Export data to file">
                            <i class="fas fa-file-export"></i> Export
                        </button>
                    </div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-danger btn-custom" data-bs-toggle="tooltip" title="Close the form">
                            <i class="fas fa-times"></i> Close
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <div class="mb-3">
            <label for="pPrintInput" class="form-label">Print Option <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="pPrintInput" name="pPrint" required placeholder="Enter print option" />
            <div class="invalid-feedback">
                Please enter a value for print option.
            </div>
        </div>

        <button type="button" class="btn btn-primary" onclick="submitPPrint()">Submit</button>
        <div class="table-container">
            <table id="example" class="table table-striped" style="width: 100%;">
                <thead>
                    <tr>
                        <th>SL</th>
                        <th>Ledger No</th>
                        <th>Party Name</th>
                        <th>Cheque No</th>
                        <th>Cheque Date</th>
                        <th>Cheque Amount</th>
                        <th>Sign By</th>
                        <th>Allotment By</th>
                        <th>Valid Till</th>
                        <th>Remarks</th>
                        <th>Payment Type</th>
                        <th>Entry Date</th>
                        <th>Transaction No</th>
                        <th>Transaction Type</th>
                        <th>Transaction Date</th>
                        <th>Bank Name</th>
                        <th>Account No</th>
                        <th>Routing No</th>
                        <th>Beneficiary Name</th>
                        <th>Note</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model?.Any() == true)
                    {
                        foreach (var entry in Model)
                        {
                            <tr>
                                <td>@entry.SL</td>
                                <td>@entry.LEDGERNO</td>
                                <td>@entry.PARTY_NAME</td>
                                <td>@entry.CHEQ_NO</td>
                                <td>@entry.CHEQ_DATE?.ToString("dd-MM-yyyy")</td>
                                <td>@entry.CHEQ_AMOUNT?.ToString("N2")</td>
                                <td>@entry.SIGNBY</td>
                                <td>@entry.ALLOTMENTBY</td>
                                <td>@entry.VALIDTILL?.ToString("dd-MM-yyyy")</td>
                                <td>@entry.REMARKS</td>
                                <td>@entry.PAYMENTTYPE</td>
                                <td>@entry.ENTRY_DATE?.ToString("dd-MM-yyyy")</td>
                                <td>@entry.TRNSNO</td>
                                <td>@entry.TNS_TYPE</td>
                                <td>@entry.TRNS_DATE?.ToString("dd-MM-yyyy")</td>
                                <td>@entry.BANK_NAME</td>
                                <td>@entry.ACC_NO</td>
                                <td>@entry.ROUTING_NO</td>
                                <td>@entry.BEF_NAME</td>
                                <td>@entry.NOTE</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="20" class="text-center text-muted py-4">No cheque data available for the provided criteria.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Chart Section -->
        <div class="chart-container">
            <canvas id="myChart"></canvas>
        </div>
    </main>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.2/dist/chart.umd.min.js"></script>
  

    <script>

            function submitPPrint() {
            var input = document.getElementById('pPrintInput');
            var pPrint = input.value.trim();

            if (!pPrint) {
                input.classList.add('is-invalid');
                return;
            } else {
                input.classList.remove('is-invalid');
            }

            // Redirect to AccmsController -> ChequeAllotment
            window.location.href = '/api/accms/cheque-allotment?pPrint=' + encodeURIComponent(pPrint);
        }
    </script>
    <script src="./js/myScript.js"></script>
</body>
</html>